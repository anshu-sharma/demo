<li id="micropost-<%= micropost.id %>">
	<%if micropost.user.avatar.url%>
		 <%= image_tag (micropost.user.avatar.url(:thumb)), id:"imageresize"%>
	<%else%>
		<%= link_to gravatar_for(micropost.user),micropost.user %>
	<%end%>
	<span class="user"><%= link_to micropost.user.name, micropost.user %></span>
	<span class="content">
		<%= micropost.content %>
		  <%= image_tag micropost.picture.url if micropost.picture? %>
	</span>
	<span class="timestamp">
    posted<%= time_ago_in_words(micropost.created_at) %>ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
	</span>
	<p><%= button_tag "comments",id:"commentid"%></p>
	<div class="comment" style= "display:none !important">
      <% micropost.comments.each do |comment| %>
    	<p>
      	<span class="user"><%= link_to comment.user.name, comment.user %></span>
      	<span class="content">
		<p><%= comment.content %>
      		<%= link_to 'Delete',[micropost,comment],method: :delete%></p>
    	</p>
		  <%= image_tag comment.micropost.picture.url if micropost.picture? %>
	    </span>
      <%end%>
           <h3>Add a comment:</h3>
	       <%= render "microposts/comment", micropost: micropost%>
  </div>
</li>