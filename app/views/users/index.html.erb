<% provide(:title, 'All users') %>
<h1>All users</h1>
<p class="search1">
<%= text_field_tag :search%>
<span class="search1">
<%= submit_tag "search for users" ,id:"search_btn",class:"btn btn-large btn-primary"%>
</span>
</span>
<script type="text/javascript">
$(document).ready(function(){
	$("#search_btn").click(function(){
	var text = $("#search").val();
	$.get('/users/search_user',{val: text},function(data){
		$(".users").html(data);
		 		});
	});

 $('#search').keyup(function(){
 	var text = $("#search").val();
 		$.get('/users/search_user',{val: text},function(data){
 			$(".users").html(data);
 		});
 });
});
 </script>
<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>
