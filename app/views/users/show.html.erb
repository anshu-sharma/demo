<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info" id="modal">
      <%if @user.avatar.url%>
      <h1>
        <%= image_tag (@user.avatar.url(:thumb)), id:"imagesize"%>
      </h1>
      <h1 class="user">
      <%= @user.name%>
      <h1>
      <%else%>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%end%>
      
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
     <%= render 'follow_form' if logged_in? %>
  	<% if @user.microposts.any? %>
  	<h3>Microposts(<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
    <% end %>
  </div>
  

</div>